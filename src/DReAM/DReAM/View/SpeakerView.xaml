<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DReAM.View.SpeakerView">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label Text="C# Conference 2018 Agenda" FontSize="34" />
            <ListView x:Name="listSpeakers" ItemsSource="{Binding Speakers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<ImageCell Text="{Binding Topic}" TextColor="Purple" Detail="{Binding SpeakerName}" DetailColor="Maroon" 
                                   ImageSource="{Binding ImageUrl}"></ImageCell>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>